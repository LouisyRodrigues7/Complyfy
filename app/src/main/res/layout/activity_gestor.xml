<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Cabeçalho com saudação -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1C2A39"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textViewSaudacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/ol_nome_do_usuario1"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Conteúdo scrollável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evolução dos pilares"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1C2A39"
                android:layout_marginBottom="24dp" />

            <!-- Pilar 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avaliação de Riscos"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- Pilar 2 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="Avaliação de Riscos"
                android:src="@drawable/pilar1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código de Conduta e Ética e Políticas de Compliance"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/pilar2"
                android:contentDescription="Código de Conduta e Ética e Políticas de Compliance"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"/>

            <!-- Pilar 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Controles Internos"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/pilar3"
                android:contentDescription="Controles Internos"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"/>

            <!-- Pilar 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investigações Internas"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/pilar4"
                android:contentDescription="Investigações Internas"
                android:adjustViewBounds="true"
                android:layout_marginBottom="16dp"/>

            <!-- Pilar 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transparência"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/pilar5"
                android:contentDescription="Transparência"
                android:adjustViewBounds="true"
                android:layout_marginBottom="24dp"/>

            <!-- Gráfico final -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/graficopizza"
                android:contentDescription="Gráfico de Pizza"
                android:adjustViewBounds="true"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/rodape_com_botoes"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#1C2A39"
        android:padding="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnGraficos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/graficos"
            android:contentDescription="Gráficos"
            android:layout_gravity="center"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:layout_gravity="center"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btnAcoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/acoes"
            android:contentDescription="Ações"
            android:layout_gravity="center"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/btnNotificacoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notificacao"
            android:contentDescription="Notificações"
            android:layout_gravity="center"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
