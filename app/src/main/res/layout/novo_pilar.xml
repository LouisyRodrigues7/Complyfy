<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Pilar - descrição"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Container Principal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1B2B3A"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Botão Nova Ação -->
            <Button
                android:id="@+id/btnNovaAcao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nova ação"
                android:backgroundTint="#2F4F4F"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Texto Responsável -->

            <!-- Campo de Responsável -->
            <TextView
                android:id="@+id/tvResponsavel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:layout_marginTop="16dp"
                android:text="Responsavel pela ação"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnNovaAcao" />

            <EditText
                android:id="@+id/etResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Nome do usuario responsavel"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:backgroundTint="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Texto Data -->
            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Início e data limite de conclusão"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/etResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"/>

            <!-- Datas -->
            <LinearLayout
                android:id="@+id/layoutDatas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvData"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDataInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/04/2025"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="á"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDataFim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/07/2025"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <!-- Texto Status -->

            <!-- Status da ação -->
            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:text="Status da ação"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutDatas" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em andamento"
                android:textColor="#FFFF00"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvStatusLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botão Concluído -->
    <Button
        android:id="@+id/btnConcluido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONCLUIDO"
        android:backgroundTint="#757575"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

